<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ListaTareas.Vistas.Agregar"
             Title="AgregarTarea">
    <ContentPage.Content>
        <StackLayout BackgroundColor="Black">
            <Label Text="NUEVA TAREA" TextColor="White"/>
            <Entry Text="{Binding Titulo}" TextTransform="Uppercase" Background="#2c3e50" TextColor="white" Placeholder="Introduzca Titulo"/>
                    <Entry Text="{Binding Descripcion}" BackgroundColor="#2c3e50" TextColor="white" Placeholder="Introduzca Tarea"/>
                    <Entry Text="{Binding Estado}" BackgroundColor="#2c3e50" TextColor="white" Placeholder="Introduzca Estado"/>
            <Button Text="Agregar" Command="{Binding agregarCommand}"/>
            <Button Text="Regresar al menú" Command="{Binding menuCommand}"/>
        </StackLayout>
        
    </ContentPage.Content>
</ContentPage>